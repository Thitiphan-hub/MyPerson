<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="3dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_Head_office"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:fontFamily="@font/ap_medium"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:text="@string/textview_Head_office_seventeen" />
            <!-- sample loren Test -->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_Front_door"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="85dp"
                android:ellipsize="end"
                android:fontFamily="@font/ap_regular"
                tools:text="@string/textview_Front_door_mobile"
                android:textColor="@color/black"
                android:textSize="14sp" />
            <!-- sample loren Test -->
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/button_select_to_camera"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="55dp"
                android:src="@drawable/ico_door_black" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>