<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".ui.ShowChooseDoorDetailActivity">
    
    <include layout="@layout/toolbarshowdetail"/>


<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_showImage"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="30dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_Employee"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            app:civ_border_color="@color/white"
            app:civ_border_width="1dp" />

    </androidx.cardview.widget.CardView>
    <LinearLayout

        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView

            android:id="@+id/showName_Employee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/ap_bold"
            android:gravity="center"
            android:text="นายฐิติพันธ์ ประกาสิทธิ์ผล"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/showName_Headoffice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ap_medium"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="สำนักงานใหญ่ (ชั้น 17)"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:layout_marginBottom="20dp"
            android:id="@+id/showName_Frontdoor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ap_regular"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="ประตูหน้าห้อง Moblie"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_Success"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:background="@drawable/button_login_background"
            android:backgroundTint="@color/OpenDoor"
            android:drawableStart="@drawable/ico_door_white"
            android:fontFamily="@font/ap_bold"
            android:paddingStart="20dp"
            android:paddingEnd="23dp"
            android:text="@string/Opendoor"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white" />


    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>


</FrameLayout>